@model  JobsWebSite.Models.Jobs

<html>
    <head>
        <title></title>
        <link rel="stylesheet" href="~/Contents/style.css" />
    </head>
    <body>
        <h1 style="color:#9d2929">Are You sure to delete that category ??</h1>
        <br /><hr /><br />
        <form method="post" action="">
          <table>
            <tr>
              <td class="userLabels" style="color:#f36666">@Html.DisplayNameFor(x=>Model.JobTitle)</td>
              <td class="userLabels" style="color:#b88"> @Html.DisplayName(Model.JobTitle)</td>
            </tr>
            <tr>
              <td class="userLabels" style="color:#f36666"> @Html.DisplayNameFor(x=>Model.JobDescription)</td>
              <td class="userLabels" style="color:#b88"> @Html.DisplayName(Model.JobDescription)</td>
           </tr>
            <tr>
              <td class="userLabels" style="color:#f36666">@Html.DisplayNameFor(x=>Model.CategoryId)</td>
              @*@Html.DisplayName((Model.CategoryId).ToString())*@
              <td class="userLabels" style="color:#b88">@if(Model.CategoryId==1)
                            {<span >General Sector</span>}
              else if (Model.CategoryId == 2)
                            {<span>Special Sector</span>}</td>
            </tr>
            <tr>
              <td class="userLabels" style="color:#f36666">@Html.DisplayNameFor(x=>Model.JobImage)</td>
              <td class="userLabels" style="color:#b88"><img src="~/Uploads/@Model.JobImage" style="width:70px;height:80px" /></td>
            </tr>
            <tr>
                <td><input type="submit" value="Delete" class="Link2" />|@Html.ActionLink("Back To List", "Index", new { }, new { @class = "Link2" })</td>
            </tr>
          </table>
        </form>
      
    </body>
</html>
