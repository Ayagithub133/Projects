@model  IEnumerable< JobsWebSite.Models.Category>

<html>
    <head>
        <title></title>
    </head>
    <body>
        <h2 style="color:#c5eff7">Index</h2><br />
        @Html.ActionLink("Create New Category", "Create", new { }, new { @class = "Link2" })
        <br /><hr />
        <form method="get" action="" >
           
            <table >
             
                <tr class="categorytablehead">
                    <th>Category Name</th>
                    <th>Category Description</th>
                    <th>Id</th>
                    <th></th>
                </tr>
                @if(Model!=null)
                {
               foreach(var item in Model)
               {
                   <tr class="categorytablebody">
                       <td>@item.CategoryName</td>
                       <td>@item.CategoryDescription</td>
                        <td>@item.Id
                        </td>
                       <td>@Html.ActionLink("Delete","Delete",new{id=item.Id}, new { @class = "Link2" })|@Html.ActionLink("Edit","Edit",new{id=item.Id}, new { @class = "Link2" })|@Html.ActionLink("Details","Details",new{id=item.Id},  new { @class = "Link2" })</td>
                   </tr>
               }
                 
                }
            </table>
          
           

        </form>
    </body>
</html>
